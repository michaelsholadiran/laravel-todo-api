{
    "info": {
        "name": "Todo API v1 (Token Auth)",
        "description": "API for managing todos. All endpoints require a Bearer token (user's unique token). If the token is new, a user is auto-created. All todos are scoped to the authenticated user.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "token",
            "value": "your-unique-token-here",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "List Todos",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "http://todo-api.test/api/v1/todos",
                    "protocol": "http",
                    "host": ["todo-api.test"],
                    "path": ["api", "v1", "todos"]
                }
            },
            "response": [
                {
                    "name": "Success",
                    "originalRequest": {},
                    "status": "OK",
                    "code": 200,
                    "body": "{\n  \"data\": [\n    {\n      \"id\": 1,\n      \"title\": \"Buy milk\",\n      \"description\": \"2 liters of milk\",\n      \"status\": \"pending\",\n      \"due_date\": null,\n      \"created_at\": \"2024-06-01T12:00:00.000000Z\",\n      \"updated_at\": \"2024-06-01T12:00:00.000000Z\"\n    }\n  ],\n  \"links\": { ... },\n  \"meta\": { ... }\n}"
                }
            ]
        },
        {
            "name": "Create Todo",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"Buy milk\",\n  \"description\": \"2 liters of milk\",\n  \"status\": \"pending\",\n  \"due_date\": null\n}"
                },
                "url": {
                    "raw": "http://todo-api.test/api/v1/todos",
                    "protocol": "http",
                    "host": ["todo-api.test"],
                    "path": ["api", "v1", "todos"]
                }
            },
            "response": [
                {
                    "name": "Created",
                    "originalRequest": {},
                    "status": "Created",
                    "code": 201,
                    "body": "{\n  \"data\": {\n    \"id\": 2,\n    \"title\": \"Buy milk\",\n    \"description\": \"2 liters of milk\",\n    \"status\": \"pending\",\n    \"due_date\": null,\n    \"created_at\": \"2024-06-01T12:00:00.000000Z\",\n    \"updated_at\": \"2024-06-01T12:00:00.000000Z\"\n  }\n}"
                }
            ]
        },
        {
            "name": "Show Todo",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "http://todo-api.test/api/v1/todos/1",
                    "protocol": "http",
                    "host": ["todo-api.test"],
                    "path": ["api", "v1", "todos", "1"]
                }
            },
            "response": [
                {
                    "name": "Success",
                    "originalRequest": {},
                    "status": "OK",
                    "code": 200,
                    "body": "{\n  \"data\": {\n    \"id\": 1,\n    \"title\": \"Buy milk\",\n    \"description\": \"2 liters of milk\",\n    \"status\": \"pending\",\n    \"due_date\": null,\n    \"created_at\": \"2024-06-01T12:00:00.000000Z\",\n    \"updated_at\": \"2024-06-01T12:00:00.000000Z\"\n  }\n}"
                },
                {
                    "name": "Not Found (if not owned by user)",
                    "originalRequest": {},
                    "status": "Not Found",
                    "code": 404,
                    "body": "{\n  \"message\": \"Not Found\"\n}"
                }
            ]
        },
        {
            "name": "Update Todo",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"Buy bread\",\n  \"description\": \"Whole grain\",\n  \"status\": \"in_progress\",\n  \"due_date\": null\n}"
                },
                "url": {
                    "raw": "http://todo-api.test/api/v1/todos/1",
                    "protocol": "http",
                    "host": ["todo-api.test"],
                    "path": ["api", "v1", "todos", "1"]
                }
            },
            "response": [
                {
                    "name": "Success",
                    "originalRequest": {},
                    "status": "OK",
                    "code": 200,
                    "body": "{\n  \"data\": {\n    \"id\": 1,\n    \"title\": \"Buy bread\",\n    \"description\": \"Whole grain\",\n    \"status\": \"in_progress\",\n    \"due_date\": null,\n    \"created_at\": \"2024-06-01T12:00:00.000000Z\",\n    \"updated_at\": \"2024-06-01T12:10:00.000000Z\"\n  }\n}"
                },
                {
                    "name": "Not Found (if not owned by user)",
                    "originalRequest": {},
                    "status": "Not Found",
                    "code": 404,
                    "body": "{\n  \"message\": \"Not Found\"\n}"
                }
            ]
        },
        {
            "name": "Delete Todo",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "http://todo-api.test/api/v1/todos/1",
                    "protocol": "http",
                    "host": ["todo-api.test"],
                    "path": ["api", "v1", "todos", "1"]
                }
            },
            "response": [
                {
                    "name": "No Content",
                    "originalRequest": {},
                    "status": "No Content",
                    "code": 204,
                    "body": ""
                },
                {
                    "name": "Not Found (if not owned by user)",
                    "originalRequest": {},
                    "status": "Not Found",
                    "code": 404,
                    "body": "{\n  \"message\": \"Not Found\"\n}"
                }
            ]
        },
        {
            "name": "Delete All Todos",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "http://todo-api.test/api/v1/todos/all",
                    "protocol": "http",
                    "host": ["todo-api.test"],
                    "path": ["api", "v1", "todos", "all"]
                }
            },
            "response": [
                {
                    "name": "No Content",
                    "originalRequest": {},
                    "status": "No Content",
                    "code": 204,
                    "header": [
                        {
                            "key": "X-Todos-Deleted",
                            "value": "2"
                        }
                    ],
                    "body": ""
                }
            ]
        }
    ]
}
